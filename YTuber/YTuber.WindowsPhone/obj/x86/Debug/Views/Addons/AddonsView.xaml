<base:NavigationPage
    x:Class="YTuber.Views.Addons.AddonsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YTuber.Views.Addons"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:base="using:YTuber.Base"
    mc:Ignorable="d">

    <Grid Background="{StaticResource BackgroundBrush}"
          Transitions="{StaticResource EntranceTransitionCollection}">
        <Grid.RowDefinitions>
            <RowDefinition Height="{StaticResource CommandBarGridLength}"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Grid
            Background="{StaticResource DarkGrayBrush}"
            RequestedTheme="Dark">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--Left side-->
            <StackPanel Orientation="Horizontal">
                <AppBarButton
                    Icon="Back"
                    ToolTipService.ToolTip="Back"
                    Command="{Binding Navigation.GoBackCommand}"
                    Visibility="{StaticResource BackButtonVisibility}"
                    Style="{StaticResource NavigationButtonStyle}"/>
                <TextBlock
                    Text="Addons"
                    Style="{StaticResource HeaderTitleTextBlockStyle}"/>
            </StackPanel>

        </Grid>

        <!--Content-->
        <ScrollViewer
            Grid.Row="1"
            Padding="{StaticResource PagePadding}">
            <StackPanel
                MaxWidth="{StaticResource TextPageMaxWidth}"
                HorizontalAlignment="Left">
                <StackPanel
                    Margin="{StaticResource SectionSpacing}">
                    <TextBlock 
                        Text="Advertisment Free"
                        Style="{StaticResource AccentHeaderTextBlockStyle}"/>
                    <TextBlock
                        Text="Are you sick of advertisement after each download? Get rid of it!"/>
                    <Button
                        Content="Buy"
                        Command="{Binding BuyAdvertisementFreeAddonCommand}"
                        IsEnabled="{Binding IsAdvertisementFreeAddonActive, Converter={StaticResource InverseBooleanConverter}}"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</base:NavigationPage>

