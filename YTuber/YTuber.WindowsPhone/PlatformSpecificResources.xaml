<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:YTuber"
    xmlns:controls="using:YTuber.Controls">

    <!--Values-->
    <x:Double x:Key="AppBarButtonWidth">76</x:Double>
    <x:Double x:Key="AppBarButtonHeight">58</x:Double>
    <GridLength x:Key="CommandBarGridLength">58</GridLength>
    <x:Double x:Key="TextPageMaxWidth">700</x:Double>
    <Thickness x:Key="PagePadding">12,12</Thickness>
    <x:Double x:Key="AppBarButtonLabelFontSize">9.5</x:Double>
    <Thickness x:Key="ListViewItemPadding">24,12,12,12</Thickness>
    <Visibility x:Key="BackButtonVisibility">Collapsed</Visibility>

    <!--AdBannerStyle-->
    <Style TargetType="controls:AdvertisementBanner">
        <Setter Property="Grid.Row" Value="1"/>
        <Setter Property="VerticalAlignment" Value="Bottom"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>
